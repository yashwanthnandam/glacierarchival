# Backend Environment Configuration
# Copy this to backend/.env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=True

# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/glacierarchival
# For SQLite (development only):
# DATABASE_URL=sqlite:///db.sqlite3

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_DEFAULT_ACL=None
AWS_S3_OBJECT_PARAMETERS={
    'CacheControl': 'max-age=86400',
}

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Glacier Archival Platform <noreply@glacierarchival.com>

# Frontend URL for email verification links
FRONTEND_URL=http://localhost:5173

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=['json']
CELERY_TASK_SERIALIZER='json'
CELERY_RESULT_SERIALIZER='json'
CELERY_TIMEZONE=UTC

# Razorpay Configuration (Development)
RAZORPAY_TEST_KEY_ID=rzp_test_your_test_key_id
RAZORPAY_TEST_KEY_SECRET=your_test_key_secret

# Razorpay Configuration (Production)
RAZORPAY_KEY_ID=rzp_live_your_live_key_id
RAZORPAY_KEY_SECRET=your_live_key_secret

# Webhook Secret (optional, defaults to RAZORPAY_KEY_SECRET)
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=5368709120  # 5GB in bytes
MAX_FILES_PER_UPLOAD=1000
MAX_CONCURRENT_UPLOADS=3
MAX_SESSION_SIZE=53687091200  # 50GB in bytes
FREE_TIER_LIMIT=16106127360  # 15GB in bytes

# Allowed File Types
ALLOWED_FILE_TYPES=[
    'image/jpeg', 'image/png', 'image/gif', 'image/webp',
    'video/mp4', 'video/avi', 'video/mov', 'video/wmv',
    'audio/mp3', 'audio/wav', 'audio/flac',
    'application/pdf', 'text/plain', 'text/csv',
    'application/zip', 'application/x-rar-compressed'
]

# Security Settings
CORS_ALLOWED_ORIGINS=[
    "http://localhost:3000",
    "http://localhost:5173",
    "http://127.0.0.1:3000",
    "http://127.0.0.1:5173",
]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Cache Configuration
CACHES={
    'default': {
        'BACKEND': 'django.core.cache.backends.redis.RedisCache',
        'LOCATION': 'redis://localhost:6379/1',
    }
}

# Session Configuration
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default
SESSION_COOKIE_AGE=86400  # 24 hours

# Media Files Configuration
MEDIA_ROOT=media/
MEDIA_URL=/media/

# Static Files Configuration
STATIC_ROOT=staticfiles/
STATIC_URL=/static/

# Production Settings (uncomment for production)
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True