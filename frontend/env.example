# Frontend Environment Configuration
# Copy this to frontend/.env and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_APP_NAME=Glacier Archival Platform
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=info

# Production Settings (uncomment for production)
# VITE_API_BASE_URL=https://api.yourdomain.com/api
# VITE_DEBUG=false
# VITE_LOG_LEVEL=warn

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=false

# Upload Configuration
VITE_MAX_FILE_SIZE=5368709120  # 5GB in bytes
VITE_MAX_TOTAL_SIZE=16106127360  # 15GB in bytes
VITE_MAX_FILES=1000
VITE_MAX_CONCURRENT_UPLOADS=3

# UI Configuration
VITE_THEME=light
VITE_LANGUAGE=en
VITE_TIMEZONE=UTC

# Monitoring (optional)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Payment Configuration (if needed for frontend)
VITE_RAZORPAY_KEY_ID=rzp_test_your_test_key_id